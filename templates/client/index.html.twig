{% extends 'base.html.twig' %}

{% block titre %}Clients — Logix G-Stock{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



    <h1 class="mb-4">liste des clients</h1>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">

            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                {% for client in clients%}
                <tr>
                    <td>{{client.id}}</td>
                    <td>{{client.nom}}</td>
                    <td>{{client.prenom}}</td>
                    <td>{{client.adresse}}</td>
                    <td>{{client.telephone}}</td>
                    <td>{{client.email}}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-primary">Afficher</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('client/_delete_form.html.twig',{'client': client})}}
                    </td>
             
                </tr>
          
                {% endfor %}
        </tbody>
    </table>
       <a href="{{ path('app_client_new') }}"> ➕ Ajouter un client</a>      
{% endblock contenu %}
