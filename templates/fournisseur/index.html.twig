{% extends 'base.html.twig' %}

{% block titre %}Liste des fournisseurs — Logix G-Stock{% endblock %}

{% block contenu %}

<h1 class="mb-4">Liste des fournisseurs</h1>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for fournisseur in fournisseurs %}
        <tr>
            <td>{{ fournisseur.id }}</td>
            <td>{{ fournisseur.nom }}</td>
            <td>{{ fournisseur.prenom }}</td>
            <td>{{ fournisseur.adresse }}</td>
            <td>{{ fournisseur.telephone }}</td>
            <td>{{ fournisseur.email }}</td>
            <td>
                <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}" class="btn btn-primary">Afficher</a>
                <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}" class="btn btn-warning">Modifier</a>
                {{ include('fournisseur/_delete_form.html.twig',{'fournisseur': fournisseur})}}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_fournisseur_new') }}"> ➕ Ajouter un fournisseur</a>


{% endblock %}
