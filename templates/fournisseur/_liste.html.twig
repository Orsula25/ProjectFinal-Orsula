{# pagination #}
{% if pages > 1 %}
  <ul class="pagination mt-3">
    <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
      <a class="page-link js-page"
         href="?page={{ page - 1 }}&q={{ q|default('') }}&sort={{ sort|default('recent') }}">
        PrÃ©cÃ©dent
