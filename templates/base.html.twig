<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{% block titre %}Logix G-Stock{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# Bootstrap #}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  {# CSS global #}
  <link rel="stylesheet" href="{{ asset('css/app.css') }}">

  {# CSS sp√©cifique par page (produit.css, achat.css‚Ä¶) #}
  {% block style %}{% endblock %}
</head>
<body class="bg-light">

{% set current = app.request.attributes.get('_route')|default('') %}

{% set hideMenu = current in ['app_login','app_register','app_forgot_password_request','app_reset_password'] %}

{% if not hideMenu %}
  {# --- NAVBAR PRINCIPALE (sombre, avec menu burger) --- #}
  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('app_accueil') }}">Logix G-Stock</a>

      <!-- Bouton burger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal"
              aria-controls="menuPrincipal" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="menuPrincipal" class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_client_' ? 'active' : '' }}"
               href="{{ path('app_client_index') }}">üë§ Clients</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_fournisseur_' ? 'active' : '' }}"
               href="{{ path('app_fournisseur_index') }}">üè≠ Fournisseurs</a>
          </li>
        </ul>

        <ul class="navbar-nav ms-auto">
          {% if app.user %}
            <li class="nav-item"><span class="navbar-text me-2">Bonjour {{ app.user.nom }}</span></li>
            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">D√©connexion</a></li>
          {% else %}
            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Connexion</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
{% endif %}

  {# --- MENU HORIZONTAL (modules principaux) --- #}
  {% set current = app.request.get('_route') %}
  {% set hideMenu = current in ['app_login','app_register','app_forgot_password_request','app_reset_password'] %}

  {% if app.user and not hideMenu %}
    <div class="bg-light border-bottom shadow-sm">
      <div class="container">
        <ul class="nav nav-pills py-2">
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_produit_' ? 'active' : '' }}"
               href="{{ path('app_produit_index') }}">Produits</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_achat_' ? 'active' : '' }}"
               href="{{ path('app_achat_index') }}">Achats</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_vente_' ? 'active' : '' }}"
               href="{{ path('app_vente_index') }}">Ventes</a>
          </li>
        </ul>
      </div>
    </div>
  {% endif %}

  {# --- Messages flash (succ√®s, erreur, etc.) --- #}
  <div class="container mt-3">
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
          {{ message }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
      {% endfor %}
    {% endfor %}
  </div>

  {# --- CONTENU PRINCIPAL --- #}
  <main class="container my-4">
    {% block contenu %}{% endblock %}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  {% block script %}{% endblock %}

  
</body>
</html>

