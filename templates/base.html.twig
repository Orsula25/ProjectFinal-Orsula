<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{% block titre %}Logix G-Stock{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
{# Bootstrap #}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

{# Font Awesome #}
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

{# CSS sp√©cifique par page (produit.css, achat.css‚Ä¶) #}
{% block style %}{% endblock %}

{# CSS global EN DERNIER pour qu‚Äôil gagne sur tout le reste #}
<link rel="stylesheet" href="{{ asset('css/app.css') }}?v=124">

{# JS global #}
<script src="{{ asset('js/app.js') }}"></script>

    
</head>
<body class="bg-light">

{# NAVBAR PRINCIPALE #}
{% set current = app.request.attributes.get('_route')|default('') %}

{% set hideMenu = current in [
  'app_login',
  'app_register',
  'app_forgot_password_request',
  'app_reset_password',
  'app_check_email',
] %}

{% if not hideMenu %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid">
      {# Bouton maison #}
      <a class="btn btn-outiline-secondary ms-2" href="{{ path('app_accueil') }}">üè†</a>

      {# Logo / titre #}
      <a class="navbar-brand" href="{{ path('app_accueil') }}">Logix G-Stock</a>

      {# Bouton burger #}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal"
              aria-controls="menuPrincipal" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="menuPrincipal" class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_client_' ? 'active' : '' }}"
               href="{{ path('app_client_index') }}">üë§ Clients</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_fournisseur_' ? 'active' : '' }}"
               href="{{ path('app_fournisseur_index') }}">üè≠ Fournisseurs</a>
          </li>
        </ul>

        {# Bloc soci√©t√© pour les admins #}
        {% if app.user and is_granted('ROLE_ADMIN') %}
          <ul class="navbar-nav me-2">
            <li class="nav-item">
              {% if app.user.entreprise is null %}
                <a class="nav-link {{ current == 'app_entreprise_new' ? 'active' : '' }}"
                   href="{{ path('app_entreprise_new') }}">
                  Cr√©er ma soci√©t√©
                </a>
              {% else %}
                <a class="nav-link {{ current starts with 'app_entreprise_' ? 'active' : '' }}"
                   href="{{ path('app_entreprise_profil') }}">
                  Ma soci√©t√©
                </a>
              {% endif %}
            </li>
          </ul>
        {% endif %}

        {# Menu utilisateur (bonjour, logout) #}
        <ul class="navbar-nav ms-auto">
          {% if app.user %}
            <li class="nav-item d-flex align-items-center me-2">
              <span class="navbar-text text-light">
                Bonjour <strong>{{ app.user.nom }}</strong>
              </span>
            </li>

            <li class="nav-item dropdown">
              <button class="btn btn-user-circle dropdown-toggle" type="button"
                      id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user"></i>
              </button>

              <ul class="dropdown-menu dropdown-menu-end user-dropdown" aria-labelledby="userMenu">
                <li class="dropdown-header small text-muted px-3">
                  Connect√© en tant que<br>
                  <strong>{{ app.user.nom }}</strong>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form method="post" action="{{ path('app_logout') }}">
                    <button type="submit" class="dropdown-item text-danger">
                      <i class="fa-solid fa-right-from-bracket me-2"></i>
                      Se d√©connecter
                    </button>
                  </form>
                </li>
              </ul>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Connexion</a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
{% endif %}

{# MENU HORIZONTAL (Produits / Achats / Ventes / Commandes) #}
{% set current = app.request.get('_route') %}
{% set hideMenu = current in [
  'app_login',
  'app_register',
  'app_forgot_password_request',
  'app_reset_password'
] %}

{% if app.user and not hideMenu %}
  <div class="bg-light border-bottom shadow-sm">
    <div class="container">
      <ul class="nav nav-pills py-2">
        <li class="nav-item">
          <a class="nav-link {{ current starts with 'app_produit_' ? 'active' : '' }}"
             href="{{ path('app_produit_index') }}">Produits</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{ current starts with 'app_achat_' ? 'active' : '' }}"
             href="{{ path('app_achat_index') }}">Achats</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{ current starts with 'app_vente_' ? 'active' : '' }}"
             href="{{ path('app_vente_index') }}">Ventes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{ current starts with 'app_commande_achat_index' ? 'active' : '' }}"
             href="{{ path('app_commande_achat_index') }}">Commandes d'achat</a>
        </li>
      </ul>
    </div>
  </div>
{% endif %}

{# MESSAGES FLASH #}
<div class="container mt-3">
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
      </div>
    {% endfor %}
  {% endfor %}
</div>

{# CONTENU PRINCIPAL #}
<main class="container my-4">
  {% block contenu %}{% endblock %}
</main>

{# JS Bootstrap 5.3.3 #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{# Chart.js pour les graphiques #}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

{# Scripts sp√©cifiques par page (dashboard, produits, etc.)#}
{% block script %}{% endblock %}

{# JS pour les lignes cliquables dans les tableaux #}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('tr.row-click[data-href]').forEach(function (row) {
      row.style.cursor = 'pointer';
      row.addEventListener('click', function (e) {
        if (e.target.tagName.toLowerCase() === 'a' || e.target.closest('a')) {
          return;
        }
        window.location = this.dataset.href;
      });
    });
  });
</script>

</body>
</html>
