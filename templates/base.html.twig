<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{% block titre %}Logix G-Stock{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# Bootstrap #}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  {# CSS global #}
  <link rel="stylesheet" href="{{ asset('css/app.css') }}">

  {# CSS spécifique par page (produit.css, achat.css…) #}
  {% block style %}{% endblock %}
</head>
<body class="bg-light">

  {# --- NAVBAR PRINCIPALE (sombre) --- #}
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('app_accueil') }}">Logix G-Stock</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="menuPrincipal" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          {% if app.user %}
            <li class="nav-item"><span class="navbar-text me-2">Salut {{ app.user.nom }}</span></li>
            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Déconnexion</a></li>
          {% else %}
            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Connexion</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>

  {# --- MENU HORIZONTAL (modules principaux) --- #}
  {% set current = app.request.get('_route') %}
  {% set hideMenu = current in ['app_login','app_register','app_forgot_password_request','app_reset_password'] %}

  {% if app.user and not hideMenu %}
    <div class="bg-light border-bottom shadow-sm">
      <div class="container">
        <ul class="nav nav-pills py-2">
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_produit_' ? 'active' : '' }}"
               href="{{ path('app_produit_index') }}">Produits</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_achat_' ? 'active' : '' }}"
               href="{{ path('app_achat_index') }}">Achats</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ current starts with 'app_vente_' ? 'active' : '' }}"
               href="{{ path('app_vente_index') }}">Ventes</a>
          </li>
        </ul>
      </div>
    </div>
  {% endif %}

  {# --- CONTENU PRINCIPAL --- #}
  <main class="container my-4">
    {% block contenu %}{% endblock %}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  {% block script %}{% endblock %}
</body>
</html>
