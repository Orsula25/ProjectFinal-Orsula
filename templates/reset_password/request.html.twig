{% extends 'base.html.twig' %}

{% block titre %}Réinitialiser votre mot de passe{% endblock %}

{% block contenu %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mb-3">Mot de passe oublié</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <p class="small text-muted">
            Entrez votre adresse e-mail et nous vous enverrons un lien
            pour réinitialiser votre mot de passe.
        </p>

        <button class="btn btn-primary mt-2">Envoyer le lien</button>
    {{ form_end(requestForm) }}
{% endblock %}
