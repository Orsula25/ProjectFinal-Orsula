{% extends 'base.html.twig' %}

{% block titre %}Connexion — Logix G-Stock{% endblock %}

{% block contenu %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
  <div class="card shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h1 class="h4 mb-3 text-center">🔐 Connexion</h1>

      {% if error %}
        <div class="alert alert-danger">
          ⚠️ Identifiant ou mot de passe incorrect.
        </div>
      {% endif %}

      {% if app.user %}
        <div class="mb-3">
          Vous êtes connecté en tant que {{ app.user.userIdentifier }},
          <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
      {% endif %}

      <form method="post">
        <div class="mb-3">
          <label for="username" class="form-label">Email</label>
          <input type="email" id="username" name="_username" class="form-control"
                 value="{{ last_username }}" required autofocus>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Mot de passe</label>
          <input type="password" id="password" name="_password" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="d-flex justify-content-between align-items-center mb-3">
          <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        </div>

        <div class="d-grid">
          <button class="btn btn-primary" type="submit">Se connecter</button>
        </div>
      </form>

      <hr>
      <div class="text-center">
        <small>Pas encore de compte ? <a href="{{ path('app_register') }}">S’enregistrer</a></small>
      </div>
    </div>
  </div>
</div>
{% endblock %}
