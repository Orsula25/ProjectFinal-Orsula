<form method="post"
      action="{{ path('app_vente_delete', {'id': vente.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce vente ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vente.id) }}">

  <button class="btn-detail btn-detail-danger" type="submit">
    Supprimer
  </button>
</form>