{% block script %}
  {{ parent() }}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const ctx = document.getElementById('stockChart');
      if (!ctx) return;

      new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: ['Produits OK', 'Sous seuil', 'En rupture'],
          datasets: [{
            data: [{{ nbOk }}, {{ nbSousSeuil }}, {{ nbRupture }}],
          }]
        },
        options: {
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    });
  </script>
