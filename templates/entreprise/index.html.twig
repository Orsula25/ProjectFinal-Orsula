{% extends 'base.html.twig' %}

{% block titre %}Entreprise index{% endblock %}

{% block contenu %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>NumTva</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.numTva }}</td>
                <td class="d-flex gap-2">
                    <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}" class="btn btn-sm btn-outline-primary">
                        Voir
                    </a>
                    <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-sm btn-primary">
                        Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_entreprise_new') }}" class="btn btn-success">
            Ajouter une entreprise
        </a>
        <a href="{{ path('app_accueil') }}" class="btn btn-outline-secondary">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}
