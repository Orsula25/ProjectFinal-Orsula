{% extends 'base.html.twig' %}

{% block titre %}Produit â€” Logix G-Stock{% endblock %}

{% block contenu %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>PrixUnitaire</th>
                <td>{{ produit.prixUnitaire }}</td>
            </tr>
            <tr>
                <th>QuantiteStock</th>
                <td>{{ produit.quantiteStock }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ produit.reference }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModification</th>
                <td>{{ produit.dateModification ? produit.dateModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tva</th>
                <td>{{ produit.tva }}</td>
            </tr>
            <tr>
                <th>StockMin</th>
                <td>{{ produit.stockMin }}</td>
            </tr>
        </tbody>
    </table>


<div class="detail-actions">

    <a href="{{ path('app_produit_index') }}" class="btn-detail btn-detail-secondary" >Afficher la liste</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn-detail btn-detail-secondary" >Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
</div>
{% endblock %}
